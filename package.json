{
  "name": "heb12",
  "productName": "Heb12 Bible",
  "version": "0.4.0",
  "description": "A simple program for reading the Bible",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/heb12/heb12",
  "keywords": [
    "bible",
    "study",
    "reference"
  ],
  "author": {
    "name": "Heb12 Bible Apps",
    "email": "heb12@protonmail.com"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "~3.0.4",
    "electron-builder": "^20.24.4"
  },
  "dependencies": {
    "chapter-and-verse": "https://github.com/heb12/chapter-and-verse/",
    "electron-store": "^2.0.0",
    "global-package-version": "^1.1.0",
    "openbibles": "^1.2.0",
    "random-verse": "^1.0.1",
    "request": "^2.88.0"
  },
  "build": {
    "appId": "tk.mtiger.heb12",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Reference"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
